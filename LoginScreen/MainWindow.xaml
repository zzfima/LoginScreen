<Window x:Class="LoginScreen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginScreen"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <StackPanel>
        <Label Content="Username" HorizontalAlignment="Left" />
        <TextBox Name="txtUsername" HorizontalAlignment="Left" Width="150" Height="50"/>

        <Label Content="Password" HorizontalAlignment="Left" />
        <PasswordBox Name="txtPassword" HorizontalAlignment="Left"  Width="150" Height="50"/>

        <StackPanel Orientation="Horizontal">
            <Button Content="Login" Click="LoginButton_Click" Margin="10"/>
            <Button Content="Add User" Click="AddUserButton_Click" Margin="10"/>
        </StackPanel>

        <TextBlock Name="lblError" Foreground="Red"  />
        <TextBlock Name="lblSuccess" Foreground="Green" />
    </StackPanel>
</Window>
